<h2>Create A New User</h2>
 <form accept-charset="UTF-8" action="/users" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label for="name">Username:</label>
  <input type="text" id="name" name="user[name]"><br><br>
  <label for="email">Email:</label>
  <input type="email" id="email" name="user[email]"><br><br>
  <label for="password">Password:</label>
  <input type="password" id="password" name="user[password]"><br><br>
  <label for="password_confirmation">Confirm Password:</label>
  <input type="password" id="password_confirmation" name="user[password_confirmation]"><br><br>
  <input type="submit" value="Submit">
</form> 